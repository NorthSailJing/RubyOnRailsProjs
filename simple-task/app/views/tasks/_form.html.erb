<%= form_with model: @task, local: true do |form| %>

  <div class="form-group">
    <%= form.label :title, "Title:" %>
    <%= form.text_field :title, class: "form-control" %>
      <% @task.errors.full_messages_for(:title).each do |message| %>
      <span style="color: red"><%= message %><br/></span>
    <% end %>
  </div>

  <div class="form-group">
    <%= form.label :body, "Body:"%>
    <%= form.text_area :body, class: "form-control" %>
    <% @task.errors.full_messages_for(:body).each do |message| %>
        <span style="color: red"><%= message %><br/></span>
    <% end %>
  </div>

  <div class="form-group">
    <%= form.label :client, "Client:" %>
    <%= form.select :client, ["NorthSail", "Molson", "Merge"], {include_blank: "Select a client"}, {class: "form-control"} %>
    <% @task.errors.full_messages_for(:client).each do |message| %>
        <span style="color: red"><%= message %><br/></span>
    <% end %>
  </div>

  <div class="form-group">
    <%= form.label :duration, "Duration: (hours):" %>
    <%= form.text_field :duration,  class: "form-control" %>
    <% @task.errors.full_messages_for(:duration).each do |message| %>
        <span style="color: red"><%= message %><br/></span>
    <% end %>
  </div>

  <div class="checkbox">
    <label><%= form.check_box :status, {}, Task.statuses.key(1), Task.statuses.key(0) %> <b>Status:</b></label>
  </div>

  <%= form.submit class: "btn btn-default" %>
<% end %>
