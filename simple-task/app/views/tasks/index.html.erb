<h1>Tasks List</h1>

<div class="mb-5">
  <span><%= link_to("New Task", new_task_path, class: "btn btn-primary") %></span>
  <span><%= link_to("Charts", chart_tasks_path, class: "btn btn-primary") %></span>
  <span><%= link_to("Download Tasks List", download_tasks_path, class: "btn btn-primary") %></span>
  <span><%= link_to("Logout", destroy_user_session_path, method: :delete, class: "btn btn-primary") %></span>
</div>

<% flash.each do |type, msg| %>
    <div class="alert alert-info">
      <%= msg %>
    </div>
<% end %>

<div>
  Total completed hours: <b><%= @completed_hours %></b> <%=@path_to_file%> 
</div>

<% if @tasks.any? %>
  <%= render "task_list" %>
  <%= pagy_bootstrap_nav(@pagy).html_safe %>
<% else %>
  <h3> There is no tasks. Please click <%= link_to "New Task", new_task_path, class: "btn btn-primary" %> button to create task. </h3>
<% end %>
