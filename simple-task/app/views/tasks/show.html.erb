<h1>Topic Details</h1>

<div class="card">
    <div class="p-2">
      <h3 class="card-title mb-4"><%= @task.title %></h3>
      <h4 class="card-subtitle mb-4 text-muted">
        <%= @task.client.name %> | <%= @task.duration %> hour(s) |
        <%= @task.status.capitalize %>
      </h4>
      <p class="card-text mb-4"><%= @task.body %></p>
      <p class="mb-4">
        <%= link_to("Edit Task", edit_task_path(@task), class: "btn btn-info") %>
        <%= link_to("Back to List", tasks_path, class: "btn btn-info") %></p>
    </div>
</div>
